<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <!-- a SessionFactory instance listed as /jndi/name -->
    <session-factory>

        <!-- properties -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/dbit</property>
        <property name="connection.username">userit</property>
        <property name="connection.password">asd123</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">none</property>
        <property name="current_session_context_class">thread</property>
        <property name="connection.pool_size">20</property>
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>


        <!-- mapping files -->
<!--        <mapping resource="Title.hbm.xml"/>-->
<!--        <mapping resource="Employee.hbm.xml"/>-->
<!--        <mapping resource="Department.hbm.xml"/>-->
<!--        <mapping resource="City.hbm.xml"/>-->

        <!-- mapping classes -->
        <mapping class="com.dbit.model.Title"/>
        <mapping class="com.dbit.model.City"/>
        <mapping class="com.dbit.model.Employee"/>
        <mapping class="com.dbit.model.Department"/>

    </session-factory>

</hibernate-configuration>