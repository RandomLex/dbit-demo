<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.dbit.model.Employee" table = "employee">

        <id name = "id" type = "int">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <property name="name" column="name"/>
        <property name="salary" column="salary"/>

        <one-to-one name="title" class="com.dbit.model.Title" cascade="all"/>

        <set name="departments" table="department_employee">
            <key column="employee_id"/>
            <many-to-many column="department_id" class="com.dbit.model.Department"/>
        </set>

    </class>
</hibernate-mapping>